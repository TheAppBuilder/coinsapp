<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_recycle_list_front"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="the.appbuilder.coins.activities.FrontRecycleListActivity"
    tools:showIn="@layout/activity_recycle_list_front">

    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:id="@+id/front_recycle_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:shimmer_demo_angle="20"
        app:shimmer_demo_child_count="10"
        app:shimmer_demo_layout="@layout/front_recycle_item_demo"
        app:shimmer_demo_shimmer_color="@color/shimmer_color"
        >

    </com.cooltechworks.views.shimmer.ShimmerRecyclerView>

</android.support.v4.widget.SwipeRefreshLayout>